<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo_img" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:text="같이찾송"
            android:textSize="20dip" />


    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageButton
            android:id="@+id/myPage_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_img" />

        <ImageButton
            android:id="@+id/registerPage_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_img" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/button1_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="마이 페이지" />

        <TextView
            android:id="@+id/button2_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="분실물 등록" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="212dp">

        <ImageButton
            android:id="@+id/searchPage_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_img" />

        <ImageButton
            android:id="@+id/alarmPage_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_img" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/button3_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="분실물 검색" />

        <TextView
            android:id="@+id/button4_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="알림창" />
    </TableRow>
</LinearLayout>
